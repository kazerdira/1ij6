# ============================================
# Production Translation API - Environment Config
# ============================================
# Copy this file to .env and configure values

# ===================
# REQUIRED FOR PRODUCTION
# ===================

# JWT Secret Key - MUST change for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_generate_a_real_secret_key

# Environment: development | staging | production
ENVIRONMENT=development

# ===================
# Redis Configuration
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379

# ===================
# Translation Settings
# ===================
SOURCE_LANGUAGE=ko
TARGET_LANGUAGE=eng_Latn
WHISPER_MODEL=base

# ===================
# Performance
# ===================
MAX_WORKERS=4
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===================
# Security - CORS
# ===================
# For production, list your domains:
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=*

# ===================
# Future: Database (when added)
# ===================
# DATABASE_URL=postgresql://user:pass@localhost:5432/translator

# ===================
# Future: Stripe (when added)
# ===================
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
